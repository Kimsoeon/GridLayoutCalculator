<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="soeonkim.kr.hs.emirim.gridlayoutcalculator.MainActivity"
    android:orientation="vertical"
    >

    <EditText
        android:id="@+id/edit_first"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        />
    <EditText
        android:id="@+id/edit_second"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
       />

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:rowCount="2"
        android:columnCount="5"
        >
        <Button
            android:id="@+id/but_0"
            android:layout_width="75dp"
            android:layout_height="wrap_content"
            android:text="0"
          />
        <Button
            android:id="@+id/but_1"
            android:layout_width="75dp"
            android:layout_height="wrap_content"
            android:text="1"
           />
        <Button
            android:id="@+id/but_2"
            android:layout_width="75dp"
            android:layout_height="wrap_content"
            android:text="2"
          />
        <Button
            android:id="@+id/but_3"
            android:layout_width="75dp"
            android:layout_height="wrap_content"
            android:text="3"
          />
        <Button
            android:id="@+id/but_4"
            android:layout_width="75dp"
            android:layout_height="wrap_content"
            android:text="4"
            />
        <Button
            android:id="@+id/but_5"
            android:layout_width="75dp"
            android:layout_height="wrap_content"
            android:text="5"
        />
        <Button
            android:id="@+id/but_6"
            android:layout_width="75dp"
            android:layout_height="wrap_content"
            android:text="6"
          />
        <Button
            android:id="@+id/but_7"
            android:layout_width="75dp"
            android:layout_height="wrap_content"
            android:text="7"
            />
        <Button
            android:id="@+id/but_8"
            android:layout_width="75dp"
            android:layout_height="wrap_content"
            android:text="8"
            />
        <Button
            android:id="@+id/but_9"
            android:layout_width="75dp"
            android:layout_height="wrap_content"
            android:text="9"
          />
    </GridLayout>
    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:rowCount="4"
        android:columnCount="1"
        android:layout_margin="10dp"
        >
        <Button
            android:id="@+id/but_op1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="+"
            android:layout_row="0"
            android:layout_column="0"/>
        <Button
            android:id="@+id/but_op2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="-"
            android:layout_row="1"
            android:layout_column="0"/>
        <Button
            android:id="@+id/but_op3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="*"
            android:layout_row="2"
            android:layout_column="0"/>
        <Button
            android:id="@+id/but_op4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="/"
            android:layout_row="3"
            android:layout_column="0"/>

    </GridLayout>
    <TextView
        android:id="@+id/text_result"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#ff0000"
        android:textSize="30dp"
        android:text="result : "
        android:layout_marginLeft="20dp"
        />
</LinearLayout>
